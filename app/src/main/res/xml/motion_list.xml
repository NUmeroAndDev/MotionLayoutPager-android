<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/base_state">
        <Constraint android:id="@id/centerView">
            <Layout
                android:layout_width="320dp"
                android:layout_height="320dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="4dp" />
        </Constraint>

        <Constraint android:id="@id/leftView">
            <Layout
                android:layout_width="320dp"
                android:layout_height="320dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="0"
                android:scaleY="0" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>

        <Constraint android:id="@id/rightView">
            <Layout
                android:layout_width="360dp"
                android:layout_height="360dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="8dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/move_left">
        <Constraint android:id="@id/centerView">
            <Layout
                android:layout_width="360dp"
                android:layout_height="360dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="8dp" />
        </Constraint>

        <Constraint android:id="@id/leftView">
            <Layout
                android:layout_width="320dp"
                android:layout_height="320dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="4dp" />
        </Constraint>

        <Constraint android:id="@id/rightView">
            <Layout
                android:layout_width="320dp"
                android:layout_height="320dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/move_right">
        <Constraint android:id="@id/centerView">
            <Layout
                android:layout_width="320dp"
                android:layout_height="320dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="0"
                android:scaleY="0" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>

        <Constraint android:id="@id/leftView">
            <Layout
                android:layout_width="320dp"
                android:layout_height="320dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/rightView">
            <Layout
                android:layout_width="320dp"
                android:layout_height="320dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="4dp" />
        </Constraint>
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@id/move_left"
        motion:constraintSetStart="@id/base_state">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:onTouchUp="autoCompleteToStart"
            motion:touchAnchorId="@id/centerView"
            motion:touchAnchorSide="right" />
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:motionTarget="@id/centerView"
                motion:percentX="0.3" />
            <KeyPosition
                motion:framePosition="10"
                motion:motionTarget="@id/leftView"
                motion:percentX="0.2" />
            <KeyAttribute
                motion:framePosition="70"
                motion:motionProgress="1"
                motion:motionTarget="@id/centerView" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/move_right"
        motion:constraintSetStart="@id/base_state">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:onTouchUp="autoCompleteToStart"
            motion:touchAnchorId="@id/centerView"
            motion:touchAnchorSide="left" />
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="90"
                motion:motionTarget="@id/centerView"
                motion:percentX="0.8" />
            <KeyPosition
                motion:framePosition="50"
                motion:motionTarget="@id/rightView"
                motion:percentX="0.7" />
            <KeyAttribute
                motion:framePosition="70"
                motion:motionProgress="1"
                motion:motionTarget="@id/centerView" />
        </KeyFrameSet>
    </Transition>

</MotionScene>